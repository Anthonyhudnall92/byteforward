# ByteForward Environment Variables Template
# Copy this file to .env and fill in your actual values

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# Domain Configuration
DOMAIN=byteforward.com
STAGING_DOMAIN=staging.byteforward.com

# GitHub Configuration (for GitHub Pages deployment)
GITHUB_TOKEN=your_github_token_here

# Contact Form Configuration (if using a service like Formspree, Netlify Forms, etc.)
CONTACT_FORM_ENDPOINT=your_contact_form_endpoint_here
CONTACT_EMAIL=contact@byteforward.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
CLOUDFLARE_WEB_ANALYTICS_TOKEN=your_cloudflare_analytics_token

# Security Configuration
CSP_REPORT_URI=https://byteforward.report-uri.com/r/d/csp/enforce
HSTS_MAX_AGE=31536000

# Build Configuration
NODE_ENV=production
BUILD_TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Optional: Third-party integrations
SENTRY_DSN=your_sentry_dsn_for_error_tracking
HOTJAR_ID=your_hotjar_id_for_user_analytics
INTERCOM_APP_ID=your_intercom_app_id_for_customer_support

# Development Configuration
DEV_PORT=3000
DEV_HOST=localhost
